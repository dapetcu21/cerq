bar-color = lighten(#000, 40%)
nub-color = lighten(#000, 60%)
bar-width = 60vh

.buttons-container
  position: relative
  margin: 6vh auto 0 auto
  width: bar-width
  height: 1vh
  background: bar-color

.button-wrapper
  position: absolute
  top: -2.5vh
  left: 0
  width: (1/4) * bar-width
  transform: translate3d(-50%, 0, 0)

  &
    color: inherit
    text-decoration: inherit
    transition: color 0.3s ease

  &:hover
    text-decoration: inherit
    color: lighten(#000, 60%)

.button-wrapper-1
  left: (0/4) * bar-width

.button-wrapper-2
  left: (1/4) * bar-width

.button-wrapper-3
  left: (2/4) * bar-width

.button-wrapper-4
  left: (3/4) * bar-width

.button-wrapper-5
  left: (4/4) * bar-width

.button-nub
  margin: 0 auto
  border: 0.75vh solid bar-color
  border-radius: 3vh
  width: 6vh
  height: 6vh
  background: #f6f6f6

.button-nub-content
  width: 100%
  height: 100%
  border-radius: 50%
  background: nub-color
  opacity: 0
  transform: scale(0.01, 0.01)
  transition: all 0.2s ease
  
.button-wrapper:hover .button-nub-content
  opacity: 0.5
  transform: scale(1.01, 1.01)
  transition: all 0.2s ease

.button-label
  font-size: 2vh
  max-width: (1/4) * bar-width


