html
  height: 100%

body
  // To prevent margin collapsing
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  background: #F6F6F6
  overflow: hidden

#main-view
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  perspective: 250px

.layout-container
  width: 70vw
  text-align: center
  position: absolute
  top: 50%
  left: 50%
  transform: translate3d(-50%, -50%, 0)

  color: lighten(#394042, 10%)
  font-family: 'PT Serif', serif
  font-size: 5vh
